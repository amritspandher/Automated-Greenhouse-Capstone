<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/page_name2"
        android:textSize="25sp"
        android:padding="5sp"
        android:layout_marginBottom="8sp"
        android:layout_marginTop="-40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_background">

        <TableRow>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/bt_back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:padding="20sp"
                android:src="@drawable/icons8_back"
                android:textAlignment="center"
                android:background="@drawable/green_button_border">
            </androidx.appcompat.widget.AppCompatImageButton>

            <TextView
                android:text="Schedules"
                android:textSize="30sp"
                android:padding="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:background="@drawable/blue_button_border"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/bt_home2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:padding="20sp"
                android:src="@drawable/icons8_home"
                android:textAlignment="center"
                android:background="@drawable/green_button_border">
            </androidx.appcompat.widget.AppCompatImageButton>

        </TableRow>

    </TableLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/adia" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow>
            <TextView
                android:id="@+id/DayLabel"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="Day"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="0sp"
                android:text="Time"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/ModuleIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="0sp"
                android:text="ModuleID"
                android:textStyle="bold"
                android:textSize="20sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/schedule1_day"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/blue_button_border"
                android:padding="5sp"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schedule1_time"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/blue_button_border"
                android:padding="5sp"
                android:text=""
                android:textSize="16sp" />
            <TextView
                android:id="@+id/schedule1_moduleID"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/blue_button_border"
                android:padding="5sp"
                android:text=""
                android:textSize="16sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/repeatLabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="0sp"
                android:text="Repeat"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/actionLabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:padding="0sp"
                android:text="Action"
                android:textStyle="bold"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/schedule1_repeatStatus"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/blue_button_border"
                android:padding="5sp"
                android:text=""
                android:textSize="16sp" />
            <TextView
                android:id="@+id/schedule1_action"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/blue_button_border"
                android:padding="5sp"
                android:text=""
                android:textSize="16sp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/deleteScheduleEntry"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:background="@drawable/green_button_border"
                android:padding="2sp"
                android:src="@drawable/icons8_minus_48"
                android:textAlignment="center"
                android:textSize="25sp" />
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/decrementScheduleEntry"
                android:layout_height="40dp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/green_button_border"
                android:padding="1sp"
                android:src="@drawable/icons8_left_arrow_64"
                android:textAlignment="center"
                android:textSize="25sp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/incrementScheduleEntry"
                android:layout_height="40dp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/green_button_border"
                android:padding="1sp"
                android:src="@drawable/icons8_right_arrow_64"
                android:textAlignment="center"
                android:textSize="25sp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/addScheduleEntry"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/green_button_border"
                android:padding="2sp"
                android:src="@drawable/icons8_add_new_30"
                android:textAlignment="center"
                android:textSize="25sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
